{
  "$schema": "https://json-schema.org/draft/2020-12/schema",

  "title": "UserCreated.v1",
  "description": "json schema for user created event (version 1)",

  "definitions": {
    "event_data": {
      "type": "object",
      "properties": {
        "public_id": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "name": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "enum": ["default", "accountant", "manager", "admin"]
        },
        "meta": {
          "type": "object"
        },
        "created_at": {
          "type": "string"
        },
        "updated_at": {
          "type": "string"
        }
      },
      "required": [
        "public_id",
        "email",
        "name",
        "role",
        "meta",
        "created_at",
        "updated_at"
      ]
    }
  },

  "type": "object",

  "properties": {
    "event_name":    { "type": "string" },
    "data": { "$ref": "#/definitions/event_data" }
  },

  "required": [
    "event_name",
    "data"
  ]
}